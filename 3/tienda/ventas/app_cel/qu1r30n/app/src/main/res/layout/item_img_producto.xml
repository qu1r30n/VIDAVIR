<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/img_producto_list2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/img_producto_list" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_producto_list" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/img_producto_list" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="26dp"/>
    <TextView
            android:text="$0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_precio_list"
            app:layout_constraintTop_toBottomOf="@+id/txt_producto_list" android:layout_marginTop="12dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/img_producto_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>