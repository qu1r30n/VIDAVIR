<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controls.Producto_Activiti">

    <TextView
            android:text="nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nom_produ_activ" android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/img_produc_activ" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="$0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_precio_produ_activ"
            android:textColor="#010F88" android:textStyle="bold" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nom_produ_activ" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Detalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_descripcion_produ_activ"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_precio_produ_activ"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="68dp"
            android:layout_height="53dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/img_produc_activ"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>